{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ES2015"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["packages/*/src", "components/*/src"]
}
