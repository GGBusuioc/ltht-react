{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es5", "es6", "DOM"],
    "jsx": "react"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["components/*/src", "packages/*/src"]
}
