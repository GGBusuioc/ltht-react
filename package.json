  "scripts": {
    "bootstrap": "lerna bootstrap && lerna run build",
    "build:sort": "lerna run build --sort",
    "build:storybook": "cd packages/storybook && yarn build:storybook",
    "build:package": "yarn lerna run build --scope=@ltht-react/flag-summary",
    "build": "lerna run build --parallel",
    "clean": "lerna run clean --parallel",
    "create:component": "node ./scripts/createComponent.js",
    "deploy:npm": "lerna publish from-package",
    "deploy:storybook": "cd packages/storybook && yarn deploy:storybook",
    "deploy": "cd packages/storybook && yarn deploy",
    "doc:components": "lerna run docs --parallel",
    "lint": "lerna run lint --parallel",
    "new:version": "lerna version --conventional-commits --yes",
    "start:debug": "cd packages/storybook && yarn start:debug",
    "start": "cd packages/storybook && yarn start",
    "test:unit": "jest --verbose",
    "test": "yarn test:unit",
    "type:check": "lerna run type:check --parallel",
    "type:gen": "lerna run type:gen --scope=@ltht-react/types && yarn lerna run build --scope=@ltht-react/types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ltht-epr/ltht-react.git"
